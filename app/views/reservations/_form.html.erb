<%# render "shared/header" %>
<%#div class="container-login"><%#application.scssにて調整%>
<%= form_with model: reservation, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :place, "場所" %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :introduction, "コメント" %><br />
    <%= f.text_area :introduction, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :image, "プロトタイプの画像" %><br />
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>